<faces-config version="2.2">
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>Messages_Fr</base-name>
            <var>msg</var>
        </resource-bundle>
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>addPerson</from-outcome>
            <to-view-id>/Person/edit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>addMovie</from-outcome>
            <to-view-id>/Movie/edit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>editPerson</from-outcome>
            <to-view-id>/Person/edit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>editMovie</from-outcome>
            <to-view-id>/Movie/edit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>detailPerson</from-outcome>
            <to-view-id>/Person/detail.xhtml</to-view-id>
            <redirect>
                <view-param>
                    <name>id</name>
                    <value>#{personBean.currentPersonId}</value>
                </view-param>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>detailMovie</from-outcome>
            <to-view-id>/Movie/detail.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>